@model IEnumerable<proje1.Entities.Kullanici>

@{
    ViewBag.Title = "KazancLimani - Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<div class="panel-heading">
    <h2>Kullanıcı Yönetimi</h2>
    <p>
        @*@Bootstrap.LinkButton("/Yonetim/KullaniciOlustur", "success", "btn-sm", "Yeni Oluştur", "plus", "Kullanıcı Oluştur")*@
        <a href="@Url.Action("KullaniciOlustur","Yonetim")" class="btn btn-success btn-sm" title="Yeni Oluştur"><i class="fa fa-plus"></i>Yeni Kullanıcı Oluştur</a>
    </p>
</div>
<div class="panel-body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciSifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciKonum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.activateGuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciAktifmi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adminmi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soyisim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cinsiyet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dogumtarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profilFoto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciSifre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciKonum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.activateGuid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciAktifmi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adminmi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soyisim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cinsiyet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dogumtarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.profilFoto)
                </td>
                <td>
                    <a href="@Url.Action("KullaniciDuzenle","Yonetim", new { id=item.kullaniciId })" class="btn btn-warning btn-sm" title="Düzenle"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("KullaniciDetay","Yonetim", new { id=item.kullaniciId })" class="btn btn-info btn-sm" title="Detay"><i class="fa fa-search"></i></a>
                    <a href="@Url.Action("KullaniciSil","Yonetim", new { id=item.kullaniciId })" class="btn btn-danger btn-sm" title="Sil"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="panel-footer">
    @Html.ActionLink("Anasayfaya Dön", "Index", "Home")
</div>