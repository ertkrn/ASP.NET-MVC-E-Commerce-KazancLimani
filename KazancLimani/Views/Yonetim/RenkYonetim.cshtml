@model IEnumerable<proje1.Entities.Renk>

@{
    ViewBag.Title = "KazancLimani - Renk Yönetimi";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<div class="panel-heading">
    <h2>Renk Yönetimi</h2>
    <p>
        @*@Bootstrap.LinkButton("/Yonetim/RenkOlustur", "success", "btn-sm", "Yeni Oluştur", "plus", "Renk Oluştur")*@
        <a href="@Url.Action("RenkOlustur","Yonetim")" class="btn btn-success btn-sm" title="Yeni Oluştur"><i class="fa fa-plus"></i>Yeni Renk Oluştur</a>
    </p>
</div>
<div class="panel-body">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.renkId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.renkAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.renkKodu)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.renkId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.renkAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.renkKodu)
            </td>
            <td>
                <a href="@Url.Action("RenkDuzenle","Yonetim", new { id=item.renkId })" class="btn btn-warning btn-sm" title="Düzenle"><i class="fa fa-edit"></i></a>
                <a href="@Url.Action("RenkDetay","Yonetim", new { id=item.renkId })" class="btn btn-info btn-sm" title="Detay"><i class="fa fa-search"></i></a>
                <a href="@Url.Action("RenkSil","Yonetim", new { id=item.renkId })" class="btn btn-danger btn-sm" title="Sil"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }

    </table>
</div>
<div class="panel-footer">
    @Html.ActionLink("Anasayfaya Dön", "Index", "Home")
</div>