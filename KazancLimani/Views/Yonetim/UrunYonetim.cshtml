@model IEnumerable<proje1.Entities.Kategori>
@{
    ViewBag.Title = "KazancLimani - Ürün Yönetimi";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<div class="panel-heading">
    <h2>Ürün Yönetimi</h2>
    <p>
        @*@Bootstrap.LinkButton("/Yonetim/UrunOlustur", "success", "btn-sm", "Yeni Oluştur", "plus", "Ürün Oluştur")*@
        <a href="@Url.Action("UrunOlustur","Yonetim")" class="btn btn-success btn-sm" title="Yeni Oluştur"><i class="fa fa-plus"></i>Yeni Ürün Oluştur</a>
        <a href="@Url.Action("UrunleriSil","Yonetim")" class="btn btn-danger btn-sm pull-right" onclick="return confirm('Tüm ürünleri silmek istediğinize emin misiniz?');">Tüm Ürünleri Sil</a>
    </p>
</div>
<div class="panel-body">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("UrunListele","Yonetim", new { id=item.kategoriId })" class="btn btn-warning btn-lg col-md-offset-5" title="@item.kategoriId"><i class="fa fa-list-ul"> @item.kategoriAdi</i></a><br />
    }
</div>
<div class="panel-footer">
    @Html.ActionLink("Anasayfaya Dön", "Index", "Home")
</div>
