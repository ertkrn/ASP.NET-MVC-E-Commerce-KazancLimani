@using proje1.Entities.ValueObjects
@using proje1.BusinessLayer
@using proje1.Entities
@model KullaniciViewModel

@{
    ViewBag.Title = "KazancKapisi - Kayıt Ol";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<div class="panel-heading">
    <h3 class="panel-title">
        Hızlı Kayıt Ol
    </h3>
</div>
<div class="panel-body">
    @using (Html.BeginForm("Kayit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(false)
        <fieldset>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                        @*<input type="text" class="form-control" placeholder="Kullanıcı Adı">*@
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="fa fa-fw fa-envelope"></i></span>
                        @*<input type="text" class="form-control" placeholder="Email">*@
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail Adresi" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="fa fa-fw fa-lock"></i></span>
                        @*<input type="password" class="form-control" placeholder="Password">*@
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="fa fa-fw fa-lock"></i></span>
                        @*<input type="password" class="form-control" placeholder="Password">*@
                        @Html.TextBoxFor(model => model.Repassword, new { @class = "form-control", placeholder = "Şifre(Tekrar)", type = "password" })
                    </div>
                </div>
                <div class="checkbox">
                    <label>
                        @*<input name="remember" type="checkbox" value="Terms">*@
                        @Html.CheckBoxFor(model => model.sozlesme, new { id="field_terms", name="terms", onchange= "this.setCustomValidity(validity.valueMissing ? 'Please indicate that you accept the Terms and Conditions' : '');", @required="required" })@*fieldterms.js*@
                        <a href="#">Ön Bilgilendirme Koşulları</a>'nı ve <a href="#">Mesafeli Satış Sözleşmesi</a>'ni okudum, onaylıyorum.
                    </label>
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Kayıt Ol">
            </fieldset>
    }
    <p class="m-b-0 m-t">Zaten bir hesabın var mı? <a href='@Url.Action("Giris","Home")'>Giriş Yap</a>.</p>
    <div class="credits">
        <a href="https://ertkrn.com/">Bizimle çalışmak ister misiniz?</a>
    </div>
</div>
<div class="panel-footer">
    <p>
        @Html.ActionLink("Geri Dön", "Index","Home")
    </p>
</div>