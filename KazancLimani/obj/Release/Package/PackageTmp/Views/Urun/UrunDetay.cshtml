@using proje1.Entities
@model Urun
@{
    ViewBag.Title = "KazancLimani - Ürün Detayı";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<div class="panel-heading">
    <h2>@Model.urunBaslik.ToUpper() ÜRÜNÜNÜN DETAYI</h2>
</div>
<div class="panel-body">
    <div class="col-md-6">
        @if (Model.urunFotosu == null)
        {
            <img src="~/Content/Image/fotoyok.jpg" />
        }
        else
        {
            <img src="~/Content/Image/Urun/@Model.urunFotosu" />
        }
    </div>
    <div class="col-md-6">
        <h4 class="col-md-offset-5 text-primary"><b>Ürün</b></h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ilanId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ilanId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.urunBaslik)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.urunBaslik)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.urunFotosu)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.urunFotosu)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.satistarihsaat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.satistarihsaat)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.urunKonum)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.urunKonum)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.halasatilikmi)
            </dt>

            <dd>
                @if (!Model.halasatilikmi)
                {
                    @("Hayır")
                }
                else
                {
                    @("Evet")
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.durumu)
            </dt>

            <dd>
                @if (!Model.durumu)
                {
                    @("Sıfır")
                }
                else
                {
                    @("İkinci El")
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.takasyapilirmi)
            </dt>

            <dd>
                @if (!Model.takasyapilirmi)
                {
                    @("Hayır")
                }
                else
                {
                    @("Evet")
                }
            </dd>

        </dl>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
        <h3><ins class="text-primary col-sm-offset-3">Ürün Açıklama</ins></h3><br />
        <p><strong>@Html.DisplayFor(model => model.urunAciklama)</strong></p>
    </div>
</div>
<div class="panel-footer">
    <p>
        @Html.ActionLink("Düzenle", "UrunDuzenle", new { id = Model.urunId }) |
        @Html.ActionLink("Geri Dön","Sattiklarim","Profil")
    </p>
</div>